{
  "name": "bit-piq",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "account": "yarn workspace @bit-piq/hardhat account",
    "chain": "yarn workspace @bit-piq/hardhat chain",
    "compile": "yarn workspace @bit-piq/hardhat compile",
    "deploy": "yarn workspace @bit-piq/hardhat deploy",
    "flatten": "yarn workspace @bit-piq/hardhat flatten",
    "fork": "yarn workspace @bit-piq/hardhat fork",
    "format": "yarn next:format && yarn hardhat:format",
    "generate": "yarn workspace @bit-piq/hardhat generate",
    "hardhat": "yarn workspace @bit-piq/hardhat",
    "hardhat-verify": "yarn workspace @bit-piq/hardhat hardhat-verify",
    "hardhat:compile": "yarn workspace @bit-piq/hardhat compile",
    "hardhat:generate-typechain": "yarn workspace @bit-piq/hardhat generate-typechain",
    "hardhat:format": "yarn workspace @bit-piq/hardhat format",
    "hardhat:lint": "yarn workspace @bit-piq/hardhat lint",
    "hardhat:lint-staged": "yarn workspace @bit-piq/hardhat lint-staged",
    "hardhat:test": "yarn workspace @bit-piq/hardhat test",
    "postinstall": "husky install",
    "frontend": "yarn workspace @bit-piq/nextjs",
    "next:build": "yarn workspace @bit-piq/nextjs build",
    "next:check-types": "yarn workspace @bit-piq/nextjs check-types",
    "next:format": "yarn workspace @bit-piq/nextjs format",
    "next:lint": "yarn workspace @bit-piq/nextjs lint",
    "next:serve": "yarn workspace @bit-piq/nextjs serve",
    "precommit": "lint-staged",
    "start": "yarn workspace @bit-piq/nextjs dev",
    "test": "yarn hardhat:test",
    "vercel": "yarn workspace @bit-piq/nextjs vercel",
    "vercel:yolo": "yarn workspace @bit-piq/nextjs vercel:yolo",
    "verify": "yarn workspace @bit-piq/hardhat verify"
  },
  "devDependencies": {
    "husky": "~8.0.3",
    "lint-staged": "~13.2.2"
  },
  "packageManager": "yarn@4.5.3",
  "engines": {
    "node": ">=18.18.0"
  }
}
